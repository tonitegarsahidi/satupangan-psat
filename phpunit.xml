<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
    </testsuites>

    <!-- Coverage settings -->
    <coverage>
        <!-- Directories to include in code coverage report -->
        <include>
            <directory suffix=".php">./app</directory>
        </include>

        <!-- Exclude certain directories from coverage report -->
        <exclude>
            <directory suffix=".php">./app/Exceptions</directory>
            <directory suffix=".php">./app/Console</directory>
            <directory suffix=".php">./app/Providers</directory>
            <directory suffix=".php">./app/Notifications</directory>
            <directory suffix=".php">./app/Mail</directory>
        </exclude>

        <!-- Output HTML coverage report -->
        <report>
            <html outputDirectory="coverage-report"/>
        </report>

        <!-- Set coverage thresholds for reporting -->
        <thresholds>
            <low upperBound="60"/>
            <high lowerBound="80"/>
        </thresholds>
    </coverage>

    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <!-- <env name="DB_CONNECTION" value="sqlite"/> -->
        <!-- <env name="DB_DATABASE" value=":memory:"/> -->
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>
